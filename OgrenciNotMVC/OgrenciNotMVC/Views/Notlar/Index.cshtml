@using OgrenciNotMVC.Models.EntityFramework;
@model List<TBLNOTLAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="btn-info" style="text-align:center">ÖĞRENCİ NOTLARI</h1>

<table class="table table-bordered">
    <tr>
        <th>NOT ID</th>
        <th>ÖĞRENCİ</th>
        <th>DERS</th>
        <th>SINAV1</th>
        <th>SINAV2</th>
        <th>SINAV3</th>
        <th>PROJE</th>
        <th>ORTALAMA</th>
        <th>DURUM</th>
        <th>GÜNCELLE</th>
    </tr>
    <tbody>
        @try
        {
            foreach (var item in @Model)
            {
        <tr>
            <td>@item.NOTID</td>
            <td>@item.OGRID</td>
            <td>@item.DERSID</td>
            <td>@item.SINAV1</td>
            <td>@item.SINAV2</td>
            <td>@item.SINAV3</td>
            <td>@item.PROJE</td>
            <td>@item.ORTALAMA</td>
            <td>@item.DURUM</td>
            <td>
                <a href="/Notlar/NotGetir/@item.NOTID" class="btn btn-warning">Güncelle</a>
            </td>
        </tr>
            }
        }
        catch (Exception ex)
        {

            <tr>
                <th>Burası model kutucuğu @Model</th>
                <th> Hata:  <span style="color:red"> @ex.Message</span></th>
            </tr>
        }
    </tbody>

</table>

<a href="/Notlar/YeniSinav" class="btn btn-primary">Yeni Sınav Girişi</a>


