@using OgrenciNotMVC.Models.EntityFramework;
@model List<TBLOGRENCILER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="btn-info" style="text-align:center">ÖĞRENCİ LİSTESİ</h1>

<table class="table table-bordered">
    <tr>
        <th>ÖĞRENCİ ID</th>
        <th>ADI</th>
        <th>SOYADI</th>
        <th>CİNSİYET</th>
        <th>KULÜP</th>
        <th>İŞLEMLER</th>
    </tr>
    <tbody>
        @try
        {
            foreach (var item in @Model)
            {
        <tr>
            <td>@item.OGRENCIID</td>
            <td>@item.OGRAD</td>
            <td>@item.OGRSOYAD</td>
            <td>@item.OGRCINSIYET</td>
            <td>@item.OGRKULUP</td>
            <td>
                <a href="/Ogrenciler/Sil/@item.OGRENCIID" class="btn btn-danger">Sil</a>
                <a href="/Ogrenciler/OgrenciGetir/@item.OGRENCIID" class="btn btn-success">Güncelle</a>
            </td>
        </tr>
            }
        }
        catch (Exception ex)
        {

            <tr>
                <th>Burası model kutucuğu @Model</th>
                <th>Hata:  <span style="color:red"> @ex.Message</span></th>
            </tr>
        }
    </tbody>

</table>
<a href="/Ogrenciler/YeniOgrenci" class="btn btn-primary">Yeni Öğrenci Kaydı</a>